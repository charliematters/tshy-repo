{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "sourceMap": true,

    "lib": ["es2022", "DOM", "DOM.Iterable"],

    "declaration": true,
    "composite": true,
    "declarationMap": true
  }
}
